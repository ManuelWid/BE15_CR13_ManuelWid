<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>{% block title %}Big Events{% endblock %}</title>
    <link rel="icon" href="{{ asset('pictures/fireworkswhite.png') }}">

    {# Bootstrap CSS #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    
    <style>
        body {
            background-image: url("{{ asset('Pictures/bg.jpg') }}");
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: cover;
        }
        nav {
            opacity: 0.5;
            transition: 0.5s;
        }
        nav:hover {
            opacity: 1;
        }
        a.active {
            text-decoration: underline;
        }
        .whitebg {
            background-color: rgba(255,255,255,0.5);
            border-radius: 1em;
        }
        #map {
            height: 35vw;
            width: 60vw;
        }
    </style>
    {% block stylesheets %}{% endblock %}
    {% block javascripts %}{% endblock %}
</head>

<body>
    {% include "components/navbar.html.twig" %}
    <div class="container">
        {% block body %}{% endblock %}
    </div>

    {# Select active link in navbar #}
    <script>
        let path = window.location.pathname;
        //console.log(path);
        let navlink = document.querySelector('[href="'+path+'"]');
        //console.log(navlink);
        navlink.classList.add('active');
        navlink.setAttribute("aria-current","true");
        //console.log(document.querySelectorAll(".nav-link"));
    </script>

    {# Bootstrap JS #}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

</body>

</html>